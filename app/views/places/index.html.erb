<!-- Carousel -->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active slider1">
      <%= image_tag 'clear.png', class: 'd-block img-fluid' %>
      <div class="carousel-caption d-none d-md-block">
        Find the best Breweries in town
      </div>
    </div>
    <div class="carousel-item slider2">
      <%= image_tag 'clear.png', class: 'd-block img-fluid' %>
      <div class="carousel-caption d-none d-md-block">
         Rate the Brewery and Beer
      </div>
    </div>
    <div class="carousel-item slider3">
      <%= image_tag 'clear.png', class: 'd-block img-fluid' %>
      <div class="carousel-caption d-none d-md-block">
         Comment and Post pictures
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="clear"></div>

<!-- Pagination -->
<div class="col-10 offset-1">
  <div class="digg_pagination">
    <%= will_paginate @places %>
  </div>
</div>

<!-- Place -->
<% @places.each do |place| %>

  <div class="booyah-box col-10 offset-1">
    <div class="percent-flex">
      <div>
        <h1><%= link_to place.name, place_path(place) %></h1>
        <i><%= place.address %></i>
        <br />
        <br />
        <p><%= place.description %></p>
        <% if place.user.present? %>
          <small><b>User#<%= place.user_id %></b></small>
        <% end %>
      </div>

<!-- Last comment -->
      <div> 
        <% if place.comments.present? %>
          <blockquote>
            User#<%= place.comments.last.user_id %> -        
            <% if place.comments.last.humanized_rating.present? %>        
              <b class="stars"><%= place.comments.last.humanized_rating %></b>
            <% end %>
          </blockquote>
          <div class="user-img-box-last">
            <div class="user-img" style="background-image: url(<%= place.comments.last.picture.url %>);">
              <%= image_tag("clear.png") %>            
            </div>            
          </div>
          <blockquote>
            <%= place.comments.last.caption %>              
          </blockquote>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<div class="clear"></div>

<!-- Pagination -->
<div class="col-10 offset-1">
  <div class="digg_pagination">
    <%= will_paginate @places %>
  </div>
</div>

<div class="clear"></div>


