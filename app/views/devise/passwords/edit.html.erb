<div class="booyah-box col-10 offset-1">
  <h2>Change your password</h2>
  <br />
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>
    <div class="form-inputs">
      <%= f.input :password, required: true, label: false, placeholder: 'password - must be a minimum 6 characters' %>
      <%= f.input :password_confirmation, required: true, label: false, placeholder: 'confirm password' %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Change my password", class: 'btn btn-primary' %>
    </div>
  <% end %>
  <br />
  <%= render "devise/shared/links" %>
</div>